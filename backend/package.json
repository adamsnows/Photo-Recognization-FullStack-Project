  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.1.1",
    "@google-cloud/vision": "^5.1.0",
    "@prisma/client": "^6.6.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.0",
    "fastify-type-provider-zod": "^4.0.2",
    "pg": "^8.14.1",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.6.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
